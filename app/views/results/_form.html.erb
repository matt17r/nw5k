<%= form_with(model: [@event, result]) do |form| %>
  <% if result.errors.any? %>
    <div class="text-red-700">
      <h2><%= pluralize(result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
        <% result.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :person, class: "block" %>
    <%= collection_select(:result, :person_id, Person.all, :id, :name, prompt: true) %>
  </div>

  <div>
    <%= form.label :event, class: "block" %>
    <%= collection_select(:result, :event_id, Event.all, :id, :to_s, prompt: true) %>
  </div>

  <div>
    <%= form.label :distance, class: "block" %>
    <%= form.select :distance, Result.distances.keys.map {|key| [Result.human_attribute_name("result.#{key}"), key]} %>
  </div>

  <div>
    <%= form.label :time, class: "block" %>
    <%= form.text_field :time_string, placeholder: "24:51 or 1:03:46" %>
  </div>

  <div>
    <%= form.submit class: "bg-purple-500 hover:bg-purple-700 text-white font-bold mt-2 py-2 px-4 rounded" %>
  </div>
<% end %>

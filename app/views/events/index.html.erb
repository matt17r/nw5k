<header>
  <nav class="flex flex-wrap items-center justify-between w-full py-4 md:py-0 px-4 text-lg text-gray-700 bg-white">
  	<div>
   		<a href="/" class="text-purple-600 no-underline hover:text-purple-800 hover:no-underline text-2xl pl-8 lg:pl-32">
				NW5k
  		</a>
  	</div>
  	<svg xmlns="http://www.w3.org/2000/svg" id="menu-button" class="h-6 w-6 cursor-pointer md:hidden block" fill="none" viewbox="0 0 24 24" stroke="currentColor">
   		<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
  	</svg>
  	<div class="hidden w-full md:flex md:items-center md:w-auto pr-8 lg:pr-32" id="menu">
   		<ul class="pt-4 text-base md:flex md:justify-between md:pt-0">
				<li> <a class="md:p-4 py-2 block text-purple-600 no-underline hover:text-purple-800 hover:no-underline" href="/">Home</a> </li>
				<li> <a class="md:p-4 py-2 block text-purple-600 no-underline hover:text-purple-800 hover:no-underline" href="/course">Course</a> </li>
			  <li> <span class="md:p-4 py-2 block text-gray-600">Results</span> </li>
   		</ul>
  	</div>
 	</nav>
</header>

<div class="w-4/5 md:w-3/4 lg:w-2/3 xl:w-1/2 mx-auto">
	<div class="justify-center items-center bg-white mx-auto rounded-lg my-4 p-4 lg:p-16">
		<h1 class="text-3xl font-medium py-2">Weekly Results</h1>
    <p>Click on a row to see all results for that week.</p>
    <table class="table-auto w-full my-4">
      <thead>
        <tr class="bg-purple-400 text-xl font-medium text-center">
          <th>Event Number</th>
          <th>Date</th>
          <th>Competitors</th>
          <th>Fastest Time</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
          <tr class="text-center text-xl hover:bg-purple-200 hover:text-purple-800">
            <td><%= link_to event.number, event, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
            <td><%= link_to event.date, event, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
            <td><%= link_to event.results.count, event, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
            <td><%= link_to time_as_string(event.results.first.time), event, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
	</div>
</div>

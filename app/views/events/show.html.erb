<div class="mx-auto md:my-4 items-center justify-center md:rounded-lg bg-white p-0 md:p-4 lg:p-16">
  <h1 class="text-3xl font-medium p-2 md:p-0 md:py-2"><%= "#{Event.model_name.human} ##{@event.number} - #{l(@event.date)}" %></h1>
  <h3 class="text-xl font-medium p-2 md:p-0 md:py-2"><%= link_to t("nw5k.other_events"), events_path, class: "text-purple-600 no-underline hover:text-purple-800 hover:no-underline" %></h3>
  <table class="table-auto w-full my-4">
    <thead>
      <tr class="bg-purple-400 text-xl font-medium text-center">
        <th class="py-2 px-4 w-1/4"><%= t("nw5k.place") %></th>
        <th class="text-left py-2 px-4 w-1/2"><%= t("nw5k.participant") %></th>
        <th colspan="2" class="py-2 px-4 w-1/4"><%= t("nw5k.time") %></th>
      </tr>
    </thead>
    <tbody>
      <% @results.each_with_index do |result, index| %>
        <tr class="text-center text-xl hover:bg-purple-200 hover:text-purple-800">
          <td><%= link_to index + 1, result.person, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
          <td class="text-left"><%= link_to result.person || t("nw5k.unknown"), result.person, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
				    <td class="text-right"><%= link_to result.time_string, result.person, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
          <td class="text-left w-4 lg:w-8">
					    <% if result.first_timer? %>
              <div class="has-tooltip">
                <div class="absolute right-0 tooltip p-1 text-sm font-medium text-white bg-purple-900 rounded-md shadow-sm transition-opacity duration-300"><%= t("nw5k.first_timer") %></div>
                <span class="no-underline text-gray-800 hover:text-purple-800">ðŸ‘‹</span>
              </div>
            <% elsif result.pb? %>
              <div class="has-tooltip">
                <div class="absolute right-0 lg:right-auto tooltip p-1 text-sm font-medium text-white bg-purple-900 rounded-md shadow-sm transition-opacity duration-300"><%= t("nw5k.pb") %></div>
                <span class="no-underline text-gray-800 hover:text-purple-800">ðŸ””</span>
              </div>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= render "volunteers", volunteers: @volunteers if @volunteers.present? %>
</div>

<div class="w-4/5 md:w-3/4 lg:w-2/3 xl:w-1/2 mx-auto">
	<div class="justify-center items-center bg-white mx-auto rounded-lg my-4 p-4 lg:p-16">
		<h1 class="text-3xl font-medium py-2"><%= "Event #{@event.number} - #{@event.date.to_fs(:medium)}" %></h1>
		<h2 class="text-xl font-medium py-2"><%= link_to "Previous Weeks", events_path %></h2>
    <table class="table-auto w-full my-4">
      <thead>
        <tr class="bg-purple-400 text-xl font-medium text-center">
          <th class="py-2 px-4 w-1/4">Place</th>
          <th class="text-left py-2 px-4 w-1/2">Participant</th>
          <th colspan="2" class="py-2 px-4 w-1/4">Time</th>
        </tr>
      </thead>
      <tbody>
        <% @results.each_with_index do |result, index| %>
          <tr class="text-center text-xl hover:bg-purple-200 hover:text-purple-800">
            <td><%= link_to index + 1, result.person, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
            <td class="text-left"><%= link_to result.person || "Unknown", result.person, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
						<td class="text-right"><%= link_to result.time_string, result.person, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
            <td class="text-left w-4 lg:w-8">
							<% if result.first_timer? %>
                <div class="has-tooltip">
                  <%= link_to "ðŸ‘‹", result.person, class: "no-underline text-gray-800 hover:text-purple-800" %>
                  <span class="tooltip p-1 text-sm font-medium text-white bg-purple-900 rounded-md shadow-sm transition-opacity duration-300">1st Timer</span>
                </div>
              <% elsif result.pb? %>
                <div class="has-tooltip">
                  <%= link_to "ðŸ””", result.person, class: "no-underline text-gray-800 hover:text-purple-800" %>
                  <span class="tooltip p-1 text-sm font-medium text-white bg-purple-900 rounded-md shadow-sm transition-opacity duration-300">NW5k Personal Best</span>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <h2 class="font-bold text-purple-600 text-sm">What's with the weird names?</h2>
		<p class="text-sm py-2">Participant names are not public by default. For all new participants, a pseudonym is randomly generated for their public display name. We'll let participants edit their own display name soon!</p>
	</div>
</div>

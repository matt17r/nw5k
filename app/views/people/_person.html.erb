<div class="w-4/5 md:w-3/4 lg:w-2/3 xl:w-1/2 mx-auto">
	<div class="justify-center items-center bg-white mx-auto rounded-lg my-4 p-4 lg:p-16">
		<h1 class="text-3xl font-medium py-2"><%= person.nickname %> <%= person.emoji %></h1>
    <h2 class="text-2xl font-medium py-2"><%= "#{pluralize(person.results.count, "event")} completed" %></h2>
    <table class="table-auto w-full my-4">
      <thead>
        <tr class="bg-purple-400 text-xl font-medium text-center">
          <th class="py-2 px-4 w-1/3">Event</th>
          <th class="py-2 px-4 w-1/3">Place</th>
          <th colspan="2" class="py-2 px-4 w-1/3">Time</th>
        </tr>
      </thead>
      <tbody>
        <% person.results.each do |result| %>
          <tr class="text-center text-xl hover:bg-purple-200 hover:text-purple-800">
            <td><%= link_to "#{result.event.number} - #{result.event.date}", result.event, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
            <td><%= link_to result.place, result.event, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
            <td class="text-right"><%= link_to result.time_string, result.event, class: "no-underline text-gray-800 hover:text-purple-800" %></td>
            <td class="text-left w-4 lg:w-8">
              <% if result.pb? %>
                <div class="has-tooltip">
                  <%= link_to "ðŸ””", result.event, class: "no-underline text-gray-800 hover:text-purple-800" %>
                  <span class="tooltip p-1 text-sm font-medium text-white bg-purple-900 rounded-md shadow-sm transition-opacity duration-300">NW5k Personal Best</span>
                </div>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

		<% if admin_signed_in? %>
		  <%= link_to "Edit this person", edit_person_path(person) %> |
		  <%= link_to "Back to people", people_path %>

		  <%= button_to "Destroy this person", person, method: :delete %>
		<% end %>
	</div>
</div>
